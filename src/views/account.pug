extends base


block content
  .form-container
    .row
      .col-md-6
        .acc-form
          .text-center
            .form-title.my-2 YOUR ACCOUNT SETTINGS
          //- WITHOUT THE API
          //- form.form-acc#userdata-form(action='/submit-user-data' method='POST' enctype='multipart/form-data')
          
          //- WITH THE API
          form.form-acc#userdata-form
            .form-group
              label(for='name') Name:
              input#name.form-control.p-3(type='text', name='name' value=`${user.name}`, required='')
            .form-group
              label(for='email') Email:
              input#email.form-control.p-3(type='email',name='email' value=`${user.email}`, required='')
            .form-group
              .image
                img.rounded-circle(src=`/img/users/${user.photo}` alt=`photo of ${user.name}`)
              label(for='photo')
              input(type='file',accept='image/*', id='photo',name='photo')
            button.btn.btn-primary Save Settings
      
      .col-md-6
        .acc-form
          .text-center
            .form-title.my-2 PASSWORD CHANGE
          
          form.form-pwd#pwd-form
            .form-group
              label(for='currentpwd') Current Password:
              input#pwd.form-control.p-3(type='password', placeholder='************', required)
            .form-group
              label(for='newpwd') New Password:
              input#newpwd.form-control.p-3(type='password', placeholder='************', required='')
            .form-group
              label(for='confirmpwd') Confirm Password:
              input#confirmpwd.form-control.p-3(type='password', placeholder='************', required='')

            
            button.btn.btn-primary#pwd-btn Save Password